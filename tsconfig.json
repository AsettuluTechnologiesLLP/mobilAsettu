{
  "extends": "@react-native/typescript-config",
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["**/node_modules", "**/Pods"],
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@ui": ["ui/index"],
      "@ui/*": ["ui/*"],
      "@assets/*": ["assets/*"],
      "@components/*": ["components/*"],
      "@screens/*": ["screens/*"],
      "@navigation/*": ["navigation/*"],
      "@services/*": ["services/*"],
      "@utils/*": ["utils/*"],
      "@constants/*": ["constants/*"],
      "@styles/*": ["styles/*"],
      "@config/*": ["config/*"],
      "@hooks/*": ["src/hooks/*"],
      "@/*": ["*"]
    }
  }
}
