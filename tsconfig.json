{
  "extends": "@react-native/typescript-config",
  "compilerOptions": {
    "jsx": "react-native",
    "strict": true,
    "noEmit": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@ui": ["ui/index"],
      "@ui/*": ["ui/*"],
      "@assets/*": ["assets/*"],
      "@components/*": ["components/*"],
      "@screens/*": ["screens/*"],
      "@navigation/*": ["navigation/*"],
      "@services/*": ["services/*"],
      "@utils/*": ["utils/*"],
      "@constants/*": ["constants/*"],
      "@styles/*": ["styles/*"],
      "@config/*": ["config/*"],
      "@hooks/*": ["hooks/*"]      // ← fixed (no extra "src/")
    }
  },
  "include": ["src/**/*", "App.tsx"],  // ← explicit scope so VSCode indexes your code
  "exclude": ["node_modules", "ios", "android", "dist", "build", "Pods"]
}
